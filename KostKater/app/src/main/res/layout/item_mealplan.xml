<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/activity_margin"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_recommendation_margin"
            android:layout_marginVertical="10dp"
            android:textSize="@dimen/font_s"
            android:textColor="@color/eerie_black"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_photo"
            card_view:layout_constraintTop_toTopOf="parent"
            android:maxLines="2"
            tools:text="Makanan" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_recommendation_margin"
            card_view:layout_constraintStart_toEndOf="@id/iv_item_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_name"
            card_view:layout_constraintBottom_toTopOf="@id/tv_type"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/font_xs"
            android:textColor="@color/eerie_black"
            tools:text="Tanggal" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_recommendation_margin"
            card_view:layout_constraintStart_toEndOf="@id/iv_item_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_date"
            card_view:layout_constraintBottom_toBottomOf="parent"
            tools:text="Sarapan"
            android:textSize="@dimen/font_xs"
            android:textColor="@color/black"
            android:background="@drawable/back"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>